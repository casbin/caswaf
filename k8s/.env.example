# Example configuration for CasWAF Kubernetes deployment
# Copy this file and modify for your environment

# MySQL Configuration
MYSQL_ROOT_PASSWORD=changeme123
MYSQL_HOST=caswaf-mysql
MYSQL_PORT=3306

# Casdoor Configuration
CASDOOR_ENDPOINT=http://casdoor.casdoor-system.svc.cluster.local:8000
CASDOOR_CLIENT_ID=your-client-id-here
CASDOOR_CLIENT_SECRET=your-client-secret-here
CASDOOR_ORGANIZATION=built-in
CASDOOR_APPLICATION=app-casdoor-gateway
CASDOOR_INSECURE_SKIP_VERIFY=true

# CasWAF Configuration
CASWAF_HTTP_PORT=7000
CASWAF_RUN_MODE=prod

# Ingress Configuration
CASWAF_DOMAIN=caswaf.example.com

# Storage
MYSQL_STORAGE_SIZE=10Gi

# Resources (adjust based on your needs)
CASWAF_CPU_REQUEST=100m
CASWAF_CPU_LIMIT=1000m
CASWAF_MEMORY_REQUEST=256Mi
CASWAF_MEMORY_LIMIT=1Gi
